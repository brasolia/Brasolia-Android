<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <ImageView
                android:id="@+id/imgEvent"
                android:layout_width = "90dp"
                android:layout_height = "70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/profile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:paddingLeft="7dp">
            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10ยบ Mostra de Curtas"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_above="@+id/tvEventDescription"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_toRightOf="@+id/imgEvent"
                android:layout_toEndOf="@+id/imgEvent"
                android:textStyle="bold|italic"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Cine"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/tvEventTitle"
                android:layout_alignStart="@+id/tvEventTitle"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sexta-feira - 10:30"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/tvEventDescription"
                android:layout_alignLeft="@+id/tvEventDescription"
                android:layout_alignStart="@+id/tvEventDescription" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/imageView2"
                android:src="@drawable/right_gray"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
