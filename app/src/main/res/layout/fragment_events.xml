<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brasolia.homeTabs.EventsFragment">

    <TextView
        android:id="@+id/tvStatusEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Nenhum evento encontrado"
        android:textColor="#fff" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#000000"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageButton
                android:id="@+id/imgEventsBarFilter1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="#000000"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/selectedmenu1" />

            <ImageButton
                android:id="@+id/imgEventsBarFilter2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="#000000"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/menu2" />

            <ImageButton
                android:id="@+id/imgEventsBarFilter4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="#000000"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/menu4" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>