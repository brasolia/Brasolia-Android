<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="50dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="50dp">

    <TextView
        android:id="@+id/no_login_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:layout_alignParentBottom="true"

        android:text="entrar sem login"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="14dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/brasolia_logo" />

        <ImageView

            android:layout_width="120dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:src="@drawable/brasolia_texto" />


    </LinearLayout>


    <LinearLayout

        android:id="@+id/face_login"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@id/no_login_text"

        android:layout_centerInParent="true"

        android:layout_marginBottom="100dp"
        android:background="@drawable/border_button"

        android:foregroundGravity="center_vertical"

        android:orientation="horizontal">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/face" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"

            android:gravity="center_vertical"
            android:text="ENTRAR COM FACEBOOK"
            android:textColor="#fff" />

    </LinearLayout>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/face_login"

        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"

        android:text="Para utilizar todos os recursos do \n aplicativo, entre com o Facebook."
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="14dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>

